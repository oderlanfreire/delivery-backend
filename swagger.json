                                }
                            }
                        }
                    },
                    "400":{
                        "description":"Bad Request",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Responses"
                                },
                                "example":{
                                    "message": "Falha na Operação."
                                }
                            }
                        }
                    },
                    "500":{
                        "description": "Erro interno de servidor",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Responses"
                                },
                                "example":{
                                    "message": "Erro interno de servidor."
                                }
                            }
                        }
                    }
                }
            }
        },
        "cliente/delete":{
            "delete":{
                "summary":"Deletar cliente",
                "description": "Deleta o cliente logado",
                "tags":["Cliente"],
                "response":{
                    "200":{
                        "description":"Conta deletada",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Responses"
                                },
                                "example":{
                                    "message": "Operação realizada com sucesso. Cadastro com sucesso."
                                }
                            }
                        }
                    },
                    "500":{
                        "description": "Erro interno de servidor",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Responses"
                                },
                                "example":{
                                    "message": "Erro interno de servidor."
                                }
                            }
                        }
                    } 
                }
            }
        },
