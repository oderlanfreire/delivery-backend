{
    "openapi": "3.0.1",
    "info":{
        "title": "Delivery-Backend",
        "description": "Essa API tem como foco simplificar o uso de endpoints do projeto para acesso do frontend",
        "contact":{
            "email": "oderlanfreire@gmail.com.br"
        },
        "version": "1.0.0"
    },
    "servers":[
        {
            "url":"http://localhost:8080",
            "description": "servidor local de desenvolvimento"
        }
    ],
    "components":{
        "schemas":{
           "Cliente":{
            "type": "object",
            "properties":{
                "nome":{
                    "type":"string"
                },
                "email":{
                    "type":"string",
                    "format":"email"
                },
                "senha":{
                    "type":"string",
                    "format":"password",
                    "writeOnly": true
                },
                "endereco":{
                    "type":"string"
                },
                "telefone":{
                    "type":"string"
                }
            }
           },
           "Responses":{
                "type": "object",
                "properties":{
                    "message": {
                        "type":"string"
                    }
                },
                "required":["message"]
            },
            "Login":{
                "type":"object",
                "properties":{
                    "email":{
                        "type":"string",
                        "format":"email"
                    },
                    "senha":{
                        "type":"string",
                        "format":"password",
                        "writeOnly": true
                    }
                },
                "required":[
                    "email",
                    "senha"
                ]
            },
            "BuscarPratos":{
                "type":"object",
                "properties":{
                    "prato":{
                        "type":"string"
                    }
                }
            },
            "RealizarPedido":{
                "type":"object",
                "properties":{
                    "restaurante":{
                        "type":"string"
                    },
                    "prato":{
                        "type":"string"
                    },
                    "quantidade":{
                        "type":"integer"
                    },
                    "pagamento":{
                        "type":"string"
                    },
                    "endereco":{
                        "type":"string"
                    },
                    "entrega":{
                        "type":"string"
                    }
                }
            },
            "CancelarPedido":{
                "type":"object",
                "properties":{
                    "idPedido":{
                        "type": "string"
                    }
                }
            },
            "Restaurante":{
                "type":"object",
                "properties":{
                    "dono":{
                        "type":"string"
                    },
                    "nomeDoRestaurante":{
                        "type":"string"
                    },
                    "cnpj":{
                        "type":"string"
                    },
                    "email":{
                        "type":"string",
                        "format":"email"
                    },
                    "senha":{
                        "type":"string",
                        "format":"password",
                        "writeOnly":true
                    },
                    "endereco":{
                        "type":"string"
                    },
                    "telefone":{
                        "type":"string"
                    }
                }
            }
        },
        "securitySchemes":{
            "bearerAuth":{
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    },

    "paths":{
        "cliente/register":{
            "post":{
                "summary":"Cadastrar",
                "description": "Cadastrar um cliente",
                "tags": ["Cliente"],
                "requestBody":{
                    "required": true,
                    "content":{
                        "application/json":{
                            "schema":{
                                "$ref": "#/components/schemas/Cliente"
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Cliente cadastrado com sucesso",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Responses"
                                },
                                "example":{
                                    "message": "Operação realizada com sucesso. Cadastro com sucesso."
                                }
                            }
                        }
                    },
                    "500":{
                        "description": "Erro interno de servidor",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "$ref":"#/components/schemas/Responses"
                                },
                                "example":{
                                    "message": "Erro interno do servidor."
                                }
                            }
                        }
                    }
                }
            }
        },
        "cliente/login":{
            "post":{
                "summary":"Login Cliente",
                "description": "Login para acesso do cliente",
                "tags":["Cliente"],
                "requestBody":{
                    "required":true,
